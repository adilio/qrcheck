{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["domains", "patterns"],
  "properties": {
    "domains": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[a-zA-Z0-9.-]+\\.[a-zA-Z]{2,}$"
      },
      "description": "List of known shortener domains"
    },
    "patterns": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[a-zA-Z0-9.-*?]+$"
      },
      "description": "List of regex patterns to match shortener domains"
    },
    "metadata": {
      "type": "object",
      "properties": {
        "version": {
          "type": "string"
        },
        "lastUpdated": {
          "type": "string",
          "format": "date-time"
        },
        "source": {
          "type": "string"
        }
      }
    }
  }
}